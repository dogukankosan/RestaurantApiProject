@model RestaurantWebUI.Dtos.AboutDtos.ResultAboutDto

@{
    string placeholder = Url.Content("~/userThema/assets/img/reservation.jpg");
    string reservationImgSrc = placeholder;
    if (Model?.AboutRezervationImage != null && Model.AboutRezervationImage.Length > 0)
    {
        try
        {
            reservationImgSrc = $"data:image/jpeg;base64,{Convert.ToBase64String(Model.AboutRezervationImage)}";
        }
        catch
        {
            reservationImgSrc = placeholder;
        }
    }
}
<div class="col-lg-4 reservation-img"
     style="background-image: url('@reservationImgSrc');"
     data-aos="fade-up"
     data-aos-delay="200">
</div>