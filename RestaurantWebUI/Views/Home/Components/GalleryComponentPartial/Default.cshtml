@using RestaurantWebUI.Dtos.GalleryImageDtos
@model List<ResultGalleryImageDto>

@{
    if (Model == null || !Model.Any())
    {
        <section id="gallery" class="gallery section light-background">
            <div class="container section-title">
                <h2>Galeri</h2>
                <p>Görüntü bulunmuyor.</p>
            </div>
        </section>
        return;
    }
    string placeholderUrl = Url.Content("~/userThema/assets/img/gallery/placeholder.jpg");
    List<string> slides = new List<string>();
    foreach (var img in Model)
    {
        if (img.ImageByte?.Length > 0)
        {
            try
            {
                slides.Add($"data:image/jpeg;base64,{Convert.ToBase64String(img.ImageByte)}");
            }
            catch
            {
                slides.Add(placeholderUrl);
            }
        }
        else
        {
            slides.Add(placeholderUrl);
        }
    }
}
<section id="gallery" class="gallery section light-background">
    <div class="container section-title" data-aos="fade-up">
        <h2>Galeri</h2>
        <p><span>Restoranımızdan</span> <span class="description-title">Görüntüler</span></p>
    </div>
    <div class="container" data-aos="fade-up" data-aos-delay="100">
        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": { "delay": 5000 },
                  "slidesPerView": "auto",
                  "centeredSlides": true,
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  },
                  "breakpoints": {
                    "320": { "slidesPerView": 1, "spaceBetween": 0 },
                    "768": { "slidesPerView": 3, "spaceBetween": 20 },
                    "1200": { "slidesPerView": 5, "spaceBetween": 20 }
                  }
                }
            </script>
            <div class="swiper-wrapper align-items-center">
                @for (int i = 0; i < slides.Count; i++)
                {
                    var src = slides[i];
                    <div class="swiper-slide">
                        <a class="glightbox"
                           data-gallery="images-gallery"
                           href="@src">
                            <img src="@src"
                                 class="img-fluid"
                                 alt="Gallery image"
                                 loading="lazy" />
                        </a>
                    </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>