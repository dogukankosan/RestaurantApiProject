@model byte[]

@{
    string placeholder = Url.Content("~/userThema/assets/img/gallery/gallery-6.jpg");
    string reportImgSrc = placeholder;
    if (Model != null && Model.Length > 0)
    {
        try
        {
            reportImgSrc = $"data:image/jpeg;base64,{Convert.ToBase64String(Model)}";
        }
        catch
        {
            reportImgSrc = placeholder;
        }
    }
}
<img src="@reportImgSrc"
     alt="Rapor Görseli"
     class="img-fluid"
     data-aos="fade-in"
     loading="lazy" />