@using RestaurantWebUI.Dtos.EventDtos
@model List<RestaurantWebUI.Dtos.EventDtos.ResultEventDto>

@{
    if (Model == null || !Model.Any())
    {
        <section id="events" class="events section">
            <div class="container section-title">
                <h2>Gurme Etkinliklerimiz</h2>
                <p>Henüz etkinlik bulunmuyor.</p>
            </div>
        </section>
        return;
    }
    string placeholderImageUrl = Url.Content("~/userThema/assets/img/events-1.jpg");
    List<string> slideBackgrounds = new();
    foreach (ResultEventDto evt in Model)
    {
        string bg;
        if (evt.EventImage?.Length > 0)
        {
            try
            {
                bg = $"data:image/jpeg;base64,{Convert.ToBase64String(evt.EventImage)}";
            }
            catch
            {
                bg = placeholderImageUrl;
            }
        }
        else
        {
            bg = placeholderImageUrl;
        }
        slideBackgrounds.Add(bg);
    }
}
<section id="events" class="events section">
    <div class="container-fluid" data-aos="fade-up" data-aos-delay="100">
        <div class="container section-title" data-aos="fade-up">
            <h2>Gurme Etkinliklerimiz</h2>
            <p>Lezzetin <span class="description-title">Eşsiz Etkinlikleri</span></p>
        </div>
        <div class="swiper init-swiper">
            <script type="application/json" class="swiper-config">
                {
                  "loop": true,
                  "speed": 600,
                  "autoplay": {
                    "delay": 5000
                  },
                  "slidesPerView": "auto",
                  "pagination": {
                    "el": ".swiper-pagination",
                    "type": "bullets",
                    "clickable": true
                  },
                  "breakpoints": {
                    "320": {
                      "slidesPerView": 1,
                      "spaceBetween": 40
                    },
                    "1200": {
                      "slidesPerView": 3,
                      "spaceBetween": 1
                    }
                  }
                }
            </script>
            <div class="swiper-wrapper">
                @for (int i = 0; i < Model.Count; i++)
                {
                    ResultEventDto item = Model[i];
                    string bgUrl = slideBackgrounds[i];
                    <div class="swiper-slide event-item d-flex flex-column justify-content-end"
                         style="background-image: url('@bgUrl'); background-size: cover;"
                         loading="lazy">
                        <h3>@Html.Encode(item.EventName ?? "")</h3>
                        <div class="price align-self-start">
                            ₺ @item.EventPrice.ToString("N2")
                        </div>
                        <p class="description">
                            @Html.Encode(item.EventDetails ?? "")
                        </p>
                    </div>
                }
            </div>
            <div class="swiper-pagination"></div>
        </div>
    </div>
</section>