    <script>
        $(document).ready(function () {
            const titleText = $('h4.card-title').text().trim();
            const table = $('#yourTableId').DataTable();
            new $.fn.dataTable.Buttons(table, {
                buttons: [
                    {
                        extend: 'excelHtml5',
                        className: 'buttons-excel',
                        text: 'Excel',
                        filename: titleText.replace(/\s+/g, '_') + '_rapor',
                        title: titleText,
                        exportOptions: {
                            columns: ':not(.no-export)'
                        }
                    },
                    {
                        extend: 'pdfHtml5',
                        className: 'buttons-pdf',
                        text: 'PDF',
                        orientation: 'landscape',
                        pageSize: 'A4',
                        filename: titleText.replace(/\s+/g, '_') + '_rapor',
                        title: titleText,
                        exportOptions: {
                            columns: ':not(.no-export)'
                        }
                    },
                    {
                        extend: 'print',
                        className: 'buttons-print',
                        text: 'Yazdır',
                        title: titleText,
                        exportOptions: {
                            columns: ':not(.no-export)'
                        }
                    }
                ]
            });
            $('#exportOptions').on('change', function () {
                const val = this.value;
                if (val === 'excel') table.button('.buttons-excel').trigger();
                else if (val === 'pdf') table.button('.buttons-pdf').trigger();
                else if (val === 'print') table.button('.buttons-print').trigger();
                this.selectedIndex = 0;
            });
        });
    </script>
