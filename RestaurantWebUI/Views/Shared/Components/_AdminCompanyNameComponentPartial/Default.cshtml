@model (byte[] logo, string companyName)

@{
    string logoSrc;
    if (Model.logo != null && Model.logo.Length > 0)
    {
        string base64 = Convert.ToBase64String(Model.logo);
        logoSrc = $"data:image/png;base64,{base64}";
    }
    else
    {
        logoSrc = Url.Content("~/adminThema/assets/img/logo.png");
    }
    string name = string.IsNullOrWhiteSpace(Model.companyName)
        ? "Şirket Adı Girilmemiş."
        : Model.companyName;
}
<div class="sidebar-brand">
    <a href="/Admin/Anasayfa">
        <img alt="image"  src="@logoSrc" class="header-logo" />
        @if (!string.IsNullOrEmpty(name))
        {
            <span style="font-size:small" class="logo-name">@name</span>
        }
    </a>
</div>
<style>
    .sidebar-brand {
        display: flex;
        align-items: center;
        padding: 0.5rem;
    }
    .sidebar-brand .header-logo {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 50%;
        margin-right: 0.5rem;
    }
    .sidebar-brand .logo-name {
        font-size: 0.1rem;         
        font-weight: 600;
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis; 
        max-width: 120px;      
        line-height: 1.2;
    }
</style>