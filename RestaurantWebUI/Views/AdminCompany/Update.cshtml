@model RestaurantWebUI.Dtos.CompanyInfoDtos.UpdateCompanyInfoDto

@{
    Layout = "~/Views/Shared/_adminLayout.cshtml";
}
<title>Şirket Bilgilerini Güncelle</title>
<h2 class="mb-3">Şirket Bilgileri Güncelleme</h2>
<hr />
<div class="col-12 col-md-10 col-lg-10">
    <div class="card">
        <form asp-action="Guncelle" asp-controller="AdminSirket" method="post">
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.CompanyInfoID)
            <div asp-validation-summary="ModelOnly" class="alert alert-danger m-3"></div>
            <div class="card-body row">
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="CompanyInfoAddress" class="form-label">Adres *</label>
                    <input asp-for="CompanyInfoAddress" class="form-control" required />
                    <span asp-validation-for="CompanyInfoAddress" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="CompanyInfoPhone" class="form-label">Telefon *</label>
                    <input asp-for="CompanyInfoPhone" class="form-control" required />
                    <span asp-validation-for="CompanyInfoPhone" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="CompanyInfoMail" class="form-label">E-Posta *</label>
                    <input asp-for="CompanyInfoMail" class="form-control" type="email" required />
                    <span asp-validation-for="CompanyInfoMail" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="CompanyInfoOpenClosed" class="form-label">Açılış / Kapanış Saatleri *</label>
                    <input asp-for="CompanyInfoOpenClosed" class="form-control" required />
                    <span asp-validation-for="CompanyInfoOpenClosed" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="CompanyInfoWebSiteLink" class="form-label">Web Sitesi</label>
                    <input asp-for="CompanyInfoWebSiteLink" class="form-control" />
                    <span asp-validation-for="CompanyInfoWebSiteLink" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="CompanyInfoGithubLink" class="form-label">GitHub</label>
                    <input asp-for="CompanyInfoGithubLink" class="form-control" />
                    <span asp-validation-for="CompanyInfoGithubLink" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="CompanyInfoInstagramLink" class="form-label">Instagram</label>
                    <input asp-for="CompanyInfoInstagramLink" class="form-control" />
                    <span asp-validation-for="CompanyInfoInstagramLink" class="text-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label asp-for="CompanyInfoLinkedinLink" class="form-label">Linkedin</label>
                    <input asp-for="CompanyInfoLinkedinLink" class="form-control" />
                    <span asp-validation-for="CompanyInfoLinkedinLink" class="text-danger"></span>
                </div>
                <div class="form-group col-12 mb-3">
                    <label asp-for="CompanyInfoIFrame" class="form-label">Harita IFrame *</label>
                    <textarea asp-for="CompanyInfoIFrame" class="form-control" rows="3"></textarea>
                    <span asp-validation-for="CompanyInfoIFrame" class="text-danger"></span>
                </div>
            </div>
            <div class="card-footer text-end">
                <button type="submit" class="btn btn-success">Güncelle</button>
                <a asp-action="Liste" asp-controller="AdminSirket" class="btn btn-secondary ms-2">İptal</a>
            </div>
        </form>
    </div>
</div>